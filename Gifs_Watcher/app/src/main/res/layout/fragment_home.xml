<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.main.home.HomeFragment">

    <ImageView
        android:id="@+id/backgroundGif"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#BFAFAF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_delete_floatingActionButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/round_shape"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/delete_floatingActionButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_colorFilter="#F74E4E"
            app:lottie_rawRes="@raw/pink_dislike" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_star_floatingActionButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/round_shape"
        android:backgroundTint="@color/md_theme_dark_surfaceVariant"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundGif"
        app:layout_constraintEnd_toStartOf="@+id/constraint_like_floatingActionButton"
        app:layout_constraintStart_toEndOf="@+id/constraint_delete_floatingActionButton"
        >

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/star_floatingActionButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_rawRes="@raw/blue_star" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_like_floatingActionButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/round_shape"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/like_floatingActionButton"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_colorFilter="#8BEC48"
            app:lottie_rawRes="@raw/green_heart" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/floatingActionButton3"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/white_qrcode_rounded_button"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/CardDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
    </Button>


    <SearchView
        android:id="@+id/main_searchView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:queryHint="Enter a Gif theme"
        android:iconifiedByDefault="false"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/floatingActionButton3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/searchview_background"
        android:queryBackground="@android:color/transparent"
        android:theme="@style/YourSearchViewStyle"
        android:searchIcon="@drawable/search"
        android:closeIcon="@drawable/ic_close_white_24dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CardDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/surface_container_low_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/Gif"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="?android:attr/scrollbarTrackVertical" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/moreOptions_floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/md_theme_dark_onSecondary"
            android:src="@drawable/option"
            app:fabSize="mini"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/Gif"
            app:tint="@color/md_theme_dark_onBackground" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gifDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Gif"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/TitleGif"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="88dp"
                android:layout_marginBottom="8dp"
                android:text=""
                android:textColor="@color/md_theme_dark_onSurface"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="@+id/moreInformations_floatingActionButton"
                app:layout_constraintEnd_toStartOf="@+id/moreInformations_floatingActionButton"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/pictureDuration"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="-1dp"
                android:layout_marginEnd="12dp"
                android:text="1.2s"
                android:textColor="@color/md_theme_dark_onSurface"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/iconDuration"
                app:layout_constraintTop_toTopOf="@+id/iconDuration" />

            <ImageView
                android:id="@+id/iconDuration"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="44dp"
                android:layout_marginBottom="38dp"
                android:src="@drawable/stopwatch"
                app:layout_constraintBottom_toTopOf="@+id/pictureDims"
                app:layout_constraintStart_toEndOf="@+id/TitleGif"
                app:layout_constraintTop_toTopOf="@+id/TitleGif"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/alineaPicture"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/alinea"
                app:layout_constraintStart_toStartOf="@+id/TitleGif"
                app:layout_constraintTop_toBottomOf="@+id/TitleGif" />

            <ImageView
                android:id="@+id/iconPicture"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="-2dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/picture"
                app:layout_constraintStart_toEndOf="@+id/alineaPicture"
                app:layout_constraintTop_toBottomOf="@+id/TitleGif" />

            <TextView
                android:id="@+id/pictureDims"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="430x550"
                android:textColor="@color/md_theme_dark_onSurface"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/moreInformations_floatingActionButton"
                app:layout_constraintStart_toEndOf="@+id/iconPicture"
                app:layout_constraintTop_toBottomOf="@+id/TitleGif" />


            <ImageView
                android:id="@+id/alineaTaille"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="-8dp"
                android:src="@drawable/alinea"
                app:layout_constraintStart_toStartOf="@+id/alineaPicture"
                app:layout_constraintTop_toBottomOf="@+id/alineaPicture" />

            <ImageView
                android:id="@+id/iconTaille"
                android:layout_width="14dp"
                android:layout_height="19dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="34dp"
                android:src="@drawable/database"
                app:layout_constraintStart_toEndOf="@+id/alineaPicture"
                app:layout_constraintStart_toStartOf="@+id/iconPicture"
                app:layout_constraintTop_toTopOf="@+id/iconPicture" />

            <TextView
                android:id="@+id/pictureTaille"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="16dp"
                android:text="4590KB"
                android:textColor="@color/md_theme_dark_onSurface"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/moreInformations_floatingActionButton"
                app:layout_constraintStart_toEndOf="@+id/iconTaille"
                app:layout_constraintStart_toStartOf="@+id/pictureDims"
                app:layout_constraintTop_toBottomOf="@+id/alineaPicture" />


            <ImageView
                android:id="@+id/alineaTemps"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="-8dp"
                android:src="@drawable/alinea"
                app:layout_constraintStart_toStartOf="@+id/alineaTaille"
                app:layout_constraintTop_toBottomOf="@+id/alineaTaille" />

            <ImageView
                android:id="@+id/iconTemps"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="34dp"
                android:src="@drawable/downloads"
                app:layout_constraintStart_toEndOf="@+id/alineaTemps"
                app:layout_constraintStart_toStartOf="@+id/iconTaille"
                app:layout_constraintTop_toTopOf="@+id/iconTaille" />


            <TextView
                android:id="@+id/pictureTemps"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="18dp"
                android:text="24/05/2023 03:03:52"
                android:textColor="@color/md_theme_dark_onSurface"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/moreInformations_floatingActionButton"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/iconTemps"
                app:layout_constraintStart_toStartOf="@+id/pictureTaille"
                app:layout_constraintTop_toBottomOf="@+id/alineaTaille"
                app:layout_constraintVertical_bias="0.0" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/moreInformations_floatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/md_theme_dark_onSecondary"
                android:src="@drawable/up_arrow"
                app:fabSize="mini"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:tint="@color/md_theme_dark_onBackground" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>