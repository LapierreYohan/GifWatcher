<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.main.home.HomeFragment">

    <ImageView
        android:id="@+id/backgroundGif"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#BFAFAF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_delete_floatingActionButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/round_shape"
        android:elevation="8dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/delete_floatingActionButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:lottie_rawRes="@raw/pink_dislike"
            app:lottie_colorFilter="#F74E4E"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_star_floatingActionButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/md_theme_dark_surfaceVariant"
        android:background="@drawable/round_shape"
        android:elevation="8dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundGif"
        app:layout_constraintEnd_toStartOf="@+id/constraint_like_floatingActionButton"
        app:layout_constraintStart_toEndOf="@+id/constraint_delete_floatingActionButton"
    >

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/star_floatingActionButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:lottie_rawRes="@raw/blue_star"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_like_floatingActionButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/round_shape"
        android:elevation="8dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/like_floatingActionButton"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_marginBottom="8dp"
            app:lottie_colorFilter="#8BEC48"
            app:lottie_rawRes="@raw/green_heart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/floatingActionButton3"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/white_qrcode_rounded_button"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/CardDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
    </Button>


    <SearchView
        android:id="@+id/main_searchView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:queryHint="Entrez un thÃ¨me de GIF"
        android:iconifiedByDefault="false"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/floatingActionButton3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/searchview_background"
        android:queryBackground="@android:color/transparent"
        android:theme="@style/YourSearchViewStyle"
        android:searchIcon="@drawable/search"
        android:closeIcon="@drawable/ic_close_white_24dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CardDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/surface_container_low_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/Gif"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="?android:attr/scrollbarTrackVertical" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/moreOptions_floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/md_theme_dark_onSecondary"
            app:tint="@color/md_theme_dark_onBackground"
            android:src="?attr/actionModeShareDrawable"
            app:fabSize="mini"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/Gif" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Gif">

            <TextView
                android:id="@+id/TitleGif"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="80dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:text=""
                android:textColor="@color/md_theme_dark_onSurface"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/moreInformations_floatingActionButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/moreInformations_floatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/chevron"
                android:backgroundTint="@color/md_theme_dark_onSecondary"
                app:tint="@color/md_theme_dark_onBackground"
                app:fabSize="mini"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>