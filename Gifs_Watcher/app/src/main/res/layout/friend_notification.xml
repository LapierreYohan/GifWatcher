<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/friend_notification_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/friend_notification_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/friend_notification_image"
            android:layout_marginStart="10dp"
            android:text="Friend Name"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/friend_notification_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/friend_notification_name"
            android:layout_toEndOf="@id/friend_notification_image"
            android:layout_marginStart="10dp"
            android:text="Friend Message"
            android:textSize="15sp"/>

    </RelativeLayout>
</RelativeLayout>