<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/modal_fragment_log"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_hideable="true"
    app:layout_constraintBottom_toBottomOf="parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/modal_fragment_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_signin"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <TextView
            android:id="@+id/login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/login_title"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
            android:textColor="@color/md_theme_dark_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/login_separator_view"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/md_theme_dark_onSurfaceVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_title"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_identifiant_textinput_layout"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:hint="@string/login_identifiant"
            android:textColorHint="@color/md_theme_dark_onSurface"
            android:theme="@style/EditTextTheme"
            app:hintTextAppearance="@style/EditTextThemeLayout"
            app:startIconDrawable="@drawable/identidiant_icon"
            app:startIconMinSize="30dp"
            app:startIconTint="@color/md_theme_dark_onSurface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_separator_view">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_identifiant_textinput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/md_theme_dark_surfaceVariant"
                android:textColorHint="@color/md_theme_dark_onSurfaceVariant"
                android:textColor="@color/md_theme_dark_onSurface"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_password_textinput_layout"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:hint="@string/login_password"
            android:textColorHint="@color/md_theme_dark_onSurface"
            android:theme="@style/EditTextTheme"
            app:hintTextAppearance="@style/EditTextThemeLayout"
            app:startIconDrawable="@drawable/password_icon"
            app:startIconMinSize="30dp"
            app:startIconTint="@color/md_theme_dark_onSurface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_identifiant_textinput_layout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_password_textinput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/md_theme_dark_surfaceVariant"
                android:textColorHint="@color/md_theme_dark_onSurfaceVariant"
                android:textColor="@color/md_theme_dark_onSurface"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                android:inputType="textPassword"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/login_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@id/login_password_textinput_layout"
            app:layout_constraintTop_toBottomOf="@+id/login_password_textinput_layout"
            android:text="@string/login_forgot"
            android:textColor="@color/md_theme_dark_primary"
            android:textSize="16sp"
        />

        <Button
            android:id="@+id/login_signin_button"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:backgroundTint="@color/md_theme_dark_primaryContainer"
            android:text="@string/login_button"
            android:textSize="17sp"
            android:textColor="@color/md_theme_dark_onPrimaryContainer"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_forgot_password"
            />

        <View
            android:id="@+id/login_separator_view2"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:background="@color/md_theme_dark_onSurfaceVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_signin_button"
            />

        <ImageView
            android:id="@+id/login_google_signin"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/google_button"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="@id/login_facebook_signin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_separator_view2"
            />

        <ImageView
            android:id="@+id/login_facebook_signin"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/facebook_button"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_separator_view2"
            />

        <ImageView
            android:id="@+id/login_apple_signin"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/apple_button"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/login_facebook_signin"
            app:layout_constraintTop_toBottomOf="@+id/login_separator_view2"
            />

        <TextView
            android:id="@+id/login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_facebook_signin"
            android:text="@string/login_register"
            android:textColor="@color/md_theme_dark_primary"
            android:textSize="16sp"
            />

        <View
            android:id="@+id/login_separator_view3"
            android:layout_width="300dp"
            android:layout_height="0.1px"
            android:layout_marginTop="20dp"
            android:background="@color/md_theme_dark_onSurfaceVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_register"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
